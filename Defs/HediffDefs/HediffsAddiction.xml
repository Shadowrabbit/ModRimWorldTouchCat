<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <HediffDef ParentName="AddictionBase">
        <defName>SrHediffAddictionTouchCat</defName>
        <label>Cat addiction</label>
        <description>Long-term touching the cat has caused the character to become dependent on touching the cat.</description>
        <hediffClass>SR.ModRimWorldTouchCat.HediffAddictionTouchPet</hediffClass>
        <causesNeed>SrNeedTouchCat</causesNeed>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-0.1</severityPerDay>
                <showDaysToRecover>true</showDaysToRecover>
            </li>
        </comps>
        <stages>
            <!--阶段1不可见-->
            <li>
                <!--无实际意义 为了过原版的数值检测-->
                <minSeverity>0</minSeverity>
            </li>
            <!--戒断状态-->
            <li>
                <!--无实际意义 为了过原版的数值检测-->
                <minSeverity>0.80</minSeverity>
                <label>withdrawal</label>
            </li>
        </stages>
    </HediffDef>
